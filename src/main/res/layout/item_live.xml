<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="96dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />


                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <!-- 스트림 섬네일 이미지 -->
                        <ImageView
                            android:id="@+id/imageView_thumbnail_liveStream"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:src="@drawable/com_facebook_profile_picture_blank_portrait" />

                        <!--<ImageView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:src="@drawable/live"/>-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/mini_textview_border"
                            android:fontFamily="@font/noto_sans_kr_bold"
                            android:text="LIVE"
                            android:textAlignment="center"
                            android:textColor="@android:color/white"
                            android:includeFontPadding="false"
                            android:textSize="14dp" />

                    </FrameLayout>



                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />

                    <!-- 빈공간 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <!-- 스트림 정보 -->
                    <LinearLayout
                        android:id="@+id/item_layout_liveStream"
                        android:layout_width="295dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- 스트림 제목 -->
                            <TextView
                                android:id="@+id/textView_title_liveStream"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="fadsfds"
                                android:fontFamily="@font/noto_sans_kr_bold"
                                android:textColor="@android:color/black"
                                android:layout_gravity="center"
                                android:layout_weight="5"/>




                            <!-- 스트림 정보 더보기 버튼 -->
                            <ImageButton
                                android:id="@+id/btn_menu_liveStream"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@android:color/transparent"
                                android:src="@mipmap/outline_more_vert_black_18"
                                android:layout_weight="1"/>



                        </LinearLayout>


                        <!-- BJ 이름 -->
                        <TextView
                            android:id="@+id/textView_bj_nick_liveStream"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BJ여행충"
                            android:textSize="10dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView_viewer_liveStream"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10dp"
                                android:text="20"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10dp"
                                android:text=" 명 시청중"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="여행 태그  "
                                android:textSize="11dp"/>

                            <TextView
                                android:id="@+id/textView_tag_liveStream"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="#일본 #먹방"
                                android:textSize="13dp"
                                android:textColor="@android:color/holo_blue_light" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>





    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="10dp" />

</LinearLayout>
